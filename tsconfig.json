{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "strict": false
    }
  },
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM"
    ],
    "outDir": "./cjs",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cjs",
    "esm",
    "docs/api"
  ]
}